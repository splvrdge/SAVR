{
  "expo": {
    "name": "Savr - Finance Tracker",
    "slug": "savr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icons/savr-white.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/icons/savr-white.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563eb"
    },
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icons/savr-white.png",
        "backgroundColor": "#2563eb"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/icons/savr-white.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/icons/savr-white.png",
          "imageWidth": 300,
          "resizeMode": "contain",
          "backgroundColor": "#2563eb"
        }
      ]
    ]
  }
}
